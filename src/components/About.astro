---
import meImage from "../assets/me.jpg";

const about = {
    name: "Roope",
    title: "Software Developer Â· Gritlab Student",
    bio: `I'm currently studying at Gritlab, focusing on Rust, Go, and full-stack development.
I love building efficient systems, experimenting with real-time apps, and exploring new tools that make development smoother.`,
    image: meImage.src,
};
---

<section
    class="max-w-4xl mx-auto my-12 px-4 flex flex-col items-center text-center"
>
    <img
        src={about.image}
        alt={about.name}
        class="w-56 rounded-xl border-4 border-gray-700 mb-4 shadow-lg object-cover"
        style="width: 224px; max-width: 224px;"
    />
    <h2 class="text-3xl font-bold mb-2">{about.name}</h2>
    <p class="text-gray-400 mb-4">{about.title}</p>
    <p class="text-gray-300 leading-relaxed max-w-2xl">{about.bio}</p>
</section>
