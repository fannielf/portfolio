---
const skills = [
  "Rust",
  "Go",
  "SQLite",
  "JavaScript",
  "GraphQL",
  "Docker",
  "HTML",
  "CSS",
  "WebSockets",
];
---

<section class="max-w-4xl mx-auto my-12 px-4">
  <h2 class="text-3xl font-bold mb-6 text-center">Skills</h2>
  <div class="flex flex-wrap justify-center gap-3">
    {skills.map(skill => (
      <span class="bg-gray-800 text-white px-4 py-2 rounded-full text-sm shadow">
        {skill}
      </span>
    ))}
  </div>
</section>
