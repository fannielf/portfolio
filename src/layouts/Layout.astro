---
import favicon from '../assets/portfolio.png';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0, user-scalable=no, viewport-fit=cover"
		/>
		<meta
			name="description"
			content="Portfolio of Roope â€” Software Developer at Gritlab"
		/>
		<link rel="icon" type="image/png" href={favicon.src} />
		<link rel="shortcut icon" type="image/png" href={favicon.src} />
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href={favicon.src}
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href={favicon.src}
		/>
		<link
			rel="apple-touch-icon"
			href={favicon.src}
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		/* Prevent elastic scrolling on iOS */
		overscroll-behavior: none;
		/* Improve touch scrolling */
		-webkit-overflow-scrolling: touch;
		/* Prevent horizontal scroll */
		overflow-x: hidden;
	}

	/* Additional mobile optimizations */
	html {
		/* Prevent zoom on input focus */
		-webkit-text-size-adjust: 100%;
		/* Better font rendering */
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	body {
		/* Ensure proper scrolling container */
		position: relative;
		/* Prevent bounce scrolling */
		overscroll-behavior-y: none;
	}

	/* Fix viewport issues on mobile browsers */
	@supports (-webkit-touch-callout: none) {
		html {
			height: -webkit-fill-available;
		}
		body {
			min-height: -webkit-fill-available;
		}
	}
</style>
