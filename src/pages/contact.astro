---
import Layout from "../layouts/Layout.astro";
import ContactSection from "../components/Contact.astro";
import "../styles/global.css";
---

<Layout title="Contact | Roope Portfolio">
    <div class="bg-gray-950 text-white font-sans min-h-screen flex flex-col">
        <!-- Header with navigation -->
        <header class="py-6 sm:py-8 text-center bg-gray-900 shadow-md">
            <div
                class="max-w-4xl mx-auto px-4 flex flex-col sm:flex-row items-center justify-between"
            >
                <div class="mb-4 sm:mb-0">
                    <h1 class="text-2xl sm:text-3xl font-bold">Contact Me</h1>
                    <p class="text-gray-400 text-sm sm:text-base">
                        Let's get in touch!
                    </p>
                </div>

                <!-- Navigation -->
                <nav class="flex gap-4">
                    <a
                        href="/portfolio/"
                        class="px-4 py-2 bg-gray-800 hover:bg-gray-700 text-gray-300 hover:text-white rounded-xl transition-colors duration-300 text-sm sm:text-base"
                    >
                        ← Back to Portfolio
                    </a>
                </nav>
            </div>
        </header>

        <main class="flex-grow">
            <ContactSection />
        </main>

        <footer
            class="text-center py-6 sm:py-8 text-gray-500 border-t border-gray-800 text-sm sm:text-base px-4"
        >
            Built with Astro · Hosted on GitHub Pages
        </footer>
    </div>
</Layout>
